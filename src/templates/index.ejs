<%- include('common/_header') %>

	<div>
		<h2 itemprop="headline"><%- bio %></h2>
		<div itemprop="articleBody">
		<% if (lang === "ja") { %>
				私のプロフィールは<a href="/bio.html">ここ</a>。
				<% } else { %>
					My bio is <a href="/bio.html">here</a>.
					<% } %>
		</div>

		<h2 itemprop="headline"><%- app_lib %></h2>
		<div id="gc" class="grid-container">
			<div class="g g-h312 g-h210-mobile grid-item-image" touch-action="pan-y">
				<%- include('common/_image2', {
					filename: 'pf-ios-detail-' + lang,
					alt: profmons_title,
					srcext: 'png',
					format: ['png', 'webp'],
					scale: [1, 1.5]
				}) %>
				<a href="/profmonster/"><div>
					<small><%- profmons_description %></small>
					<h3><%- profmons_title %></h3>
				</div></a>
			</div>
			<div class="g" touch-action="pan-y">
				<a href="https://github.com/mntone/inknit" target="_blank" rel="noreferrer noopener"><div>
					<small><%- inknit_description %></small>
					<h3><%- inknit_title %></h3>
				</div></a>
			</div>
			<div class="g" touch-action="pan-y">
				<a href="https://github.com/mntone/RWinRT" target="_blank" rel="noreferrer noopener"><div>
					<small><%- rwinrt_description %></small>
					<h3><%- rwinrt_title %></h3>
				</div></a>
			</div>
			<div class="g" touch-action="pan-y">
				<a href="/aw/"><div>
					<small><%- studyapexlegends %></small>
					<h3><%- apexdata %></h3>
				</div></a>
			</div>
			<div class="g g-h69 g-h60-mobile" touch-action="pan-y">
				<a href="/ikaconnect/"><div>
					<h3><%- ikaconnect %></h3>
				</div></a>
			</div>
			<div class="g g-h69 g-h60-mobile" touch-action="pan-y">
				<a href="/tvupl/"><div>
					<h3><%- twittervideouploader %></h3>
				</div></a>
			</div>
		</div>

		<h2 itemprop="headline"><%- social_media %></h2>
		<div id="gc" class="grid-container">
			<div class="g g-h75 grid-brand-mastodon" touch-action="pan-y">
				<a href="https://mstdn.jp/@mntone" target="_blank" rel="noreferrer noopener"><div>
					<h3>Mastodon</h3>
				</div></a>
			</div>
			<div class="g g-h75 grid-brand-x" touch-action="pan-y">
				<a href="https://x.com/mntone" target="_blank" rel="noreferrer noopener"><div>
					<h3><%- x_title %></h3>
				</div></a>
			</div>
			<div class="g g-h75 grid-brand-github" touch-action="pan-y">
			<a href="https://github.com/mntone" target="_blank" rel="noreferrer noopener"><div>
				<h3>GitHub</h3>
			</div></a>
		</div>
	</div>
	<script>
		var gc = document.getElementById("gc");
		var items = gc.childNodes;
		for (var i = 0; i !== items.length; ++i)
		{
			var item = items[i];
			if (item.nodeName !== "DIV") continue;

			var a = item.getElementsByTagName("a")[0];
			a.addEventListener("keydown", function (e) {
				if (e.keyCode === 13) e.currentTarget.parentElement.classList.add("keydown");
			});
		}
	</script>
</div>

<%- include('common/_footer') %>

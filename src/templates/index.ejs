<%- include('common/_header') %>

<div>
	<h2 itemprop="headline"><%- bio %></h2>
	<div itemprop="articleBody">
		<% if (lang === "ja") { %>
		私のプロフィールは<a href="/bio.html">ここ</a>。
		<% } else { %>
		My bio is <a href="/bio.html">here</a>.
		<% } %>
	</div>

	<h2 itemprop="headline"><%- app_lib %></h2>
	<div id="gc" class="grid-container">
		<div class="grid-item grid3-item" touch-action="pan-y">
			<a href="/aw/"><div>
				<small><%- studyapexlegends %></small>
				<h3><%- apexdata %></h3>
			</div></a>
		</div>
		<div class="grid-item grid-item-image grid3-item" touch-action="pan-y">
			<picture>
				<source type="image/avif" srcset="/i/ic-uap10.0d-main-<%- lang %>@20.avif">
				<source type="image/webp" srcset="/i/ic-uap10.0d-main-<%- lang %>@20.webp">
				<img src="/i/ic-uap10.0d-main-<%- lang %>@20.png" alt="<%- ikaconnect %>">
			</picture>
			<a href="/ikaconnect/"><div>
				<small><%- enjoysplatoon %></small>
				<h3><%- ikaconnect %></h3>
			</div></a>
		</div>
		<div class="grid-item grid-item-image grid3-item" touch-action="pan-y">
			<picture>
				<source type="image/avif" srcset="/i/tvupl.10.avif, /i/tvupl.15.avif 1.5x">
				<source type="image/webp" srcset="/i/tvupl.10.webp, /i/tvupl.15.webp 1.5x">
				<img src="/i/tvupl.10.png" srcset="/i/tvupl.15.png 1.5x" alt="<%- twittervideouploader %>">
			</picture>
			<a href="/tvupl/"><div>
				<small><%- twitterhighquality %></small>
				<h3><%- twittervideouploader %></h3>
			</div></a>
		</div>
		<div class="grid-item grid3-item" touch-action="pan-y">
			<a href="https://github.com/mntone/RtmpClient" target="_blank" rel="noreferrer noopener"><div>
				<small><%- usertmp %></small>
				<h3>RtmpClient <wbr>for Windows Runtime</h3>
			</div></a>
		</div>
		<div class="grid-item grid3-item" touch-action="pan-y">
			<a href="https://github.com/mntone/SvgForXaml" target="_blank" rel="noreferrer noopener"><div>
				<small><%- usesvg %></small>
				<h3>Svg for xaml</h3>
			</div></a>
		</div>
		<div class="grid-item grid3-item" touch-action="pan-y">
			<a href="https://github.com/mntone/UniversalGraphics" target="_blank" rel="noreferrer noopener"><div>
				<small><%- useug %></small>
				<h3>UniversalGraphics</h3>
			</div></a>
		</div>
	</div>

	<h2 itemprop="headline"><%- social_media %></h2>
	<div id="gc" class="grid-container">
		<div class="grid-item grid3-item grid3-squeeze-item" touch-action="pan-y">
			<a href="https://github.com/mntone" target="_blank" rel="noreferrer noopener"><div>
				<h3>GitHub</h3>
			</div></a>
		</div>
		<div class="grid-item grid3-item grid3-squeeze-item" touch-action="pan-y">
			<a href="https://twitter.com/mntone" target="_blank" rel="noreferrer noopener"><div>
				<h3>Twitter</h3>
			</div></a>
		</div>
		<div class="grid-item grid3-item grid3-squeeze-item" touch-action="pan-y">
			<a href="https://mstdn.jp/@mntone" target="_blank" rel="noreferrer noopener"><div>
				<h3>Mastodon</h3>
			</div></a>
		</div>
	</div>
	<script>
		var gc = document.getElementById("gc");
		var items = gc.childNodes;
		for (var i = 0; i !== items.length; ++i)
		{
			var item = items[i];
			if (item.nodeName !== "DIV") continue;

			var a = item.getElementsByTagName("a")[0];
			a.addEventListener("keydown", function (e) {
				if (e.keyCode === 13) e.currentTarget.parentElement.classList.add("keydown");
			});
		}
	</script>
</div>

<%- include('common/_footer') %>
